<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/backround_app"
    tools:context=".main.SplashScreen">

    <ImageView
        android:layout_marginTop="185dp"
        android:layout_marginLeft="17dp"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/logo_patech" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:id="@+id/patech_jdl"
        android:text="Patech"
        android:textSize="30dp"
        android:fontFamily="@font/montserratbold"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/patech_desc"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/montserratregular"
        android:text="Anthracnose disease control system"
        android:textSize="15dp"
        android:textColor="@color/white" />

</LinearLayout>