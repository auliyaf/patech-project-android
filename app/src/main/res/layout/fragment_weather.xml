<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.WeatherFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/form_container">

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cityprovince_text"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cuaca Hari Ini" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/suhu_today"
                            android:layout_width="match_parent"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserratbold"
                            android:text="26"
                            android:textSize="70dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/kondisi_awan"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserratbold"
                            android:text="Berawan"
                            android:textSize="25dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/weather_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:src="@drawable/weathericon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:padding="2dp"
                            android:layout_width="25dp"
                            android:src="@drawable/left_arrow"
                            android:scaleType="fitXY"
                            android:background="@color/white"
                            android:layout_height="25dp"/>


                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="200dp"
                            android:layout_weight="1"
                            android:text="20 Juni 2021"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:layout_height="wrap_content"/>

                        <ImageButton
                            android:padding="2dp"
                            android:layout_width="25dp"
                            android:src="@drawable/right_arrow"
                            android:scaleType="fitXY"
                            android:background="@color/white"
                            android:layout_height="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/forecast_recyclerview"
                            android:layout_width="match_parent"
                            android:nestedScrollingEnabled="false"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>